group :development, :test do
	gem 'pry'
  gem 'rspec-rails'
end

group :test do
	gem 'simplecov', :require => false
	gem 'launchy'
	gem 'capybara'
	gem 'database_cleaner'
	gem 'shoulda-matchers'
end

