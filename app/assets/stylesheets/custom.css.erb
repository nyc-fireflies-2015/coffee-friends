.banner {
    height: 35em;
    width: 100%
  }

.square {
  width: 100%;
  height: 400px;
  border-radius: 5px;
}
div.upload {
    width: 400px;
    height: 400px;
    background: url(<%= asset_path 'filedropzone.png' %>) no-repeat center;
    overflow: hidden;
}

#upload_input {
    display: block !important;
    width: 400px !important;
    height: 400px !important;
    opacity: 0;
    overflow: hidden !important;
}

.tag-container, .profile-filter-tag {
  word-break: keep-all;
  word-wrap: normal;
  display: inline;
  padding: 4px 5px;
  margin: 5px 5px 5px 0;
  color: #999;
  border: #ccc 1px solid;
  border-radius: 3px;
}

.tag-container:hover, .profile-filter-tag:hover {
  background-color: #EEEEEE;
  color: black;
}

.coffee-gift {
  padding: 4px 8px;
  border: #ccc 1px solid;
  border-radius: 3px;
}

.accordion {
  margin-left: 0;
}

.bold {
  font-weight: 500;
}

.redeemed, .redeemed:hover {
  border: #EFEFEF 1px solid;
  color: #DDDDDD;
}
